<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Título -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generador de Recetas"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:paddingBottom="16dp" />

    <!-- Campo para ingresar ingredientes -->
    <EditText
        android:id="@+id/inputIngredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingresa ingredientes separados por comas"
        android:inputType="text"
        android:padding="8dp" />

    <!-- Botón para buscar recetas -->
    <Button
        android:id="@+id/buttonSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buscar Recetas"
        android:layout_gravity="center"
        android:paddingTop="16dp" />
</LinearLayout>
